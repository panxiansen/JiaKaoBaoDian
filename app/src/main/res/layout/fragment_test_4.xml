<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:background="@color/lightgray"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/tab_menu_baoming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/teb_menu_baoming_text"
                    style="@style/normal_text"
                    android:drawableTop="@mipmap/toutiao__qctt_home_ic_ktcc"
                    android:textColor="@color/black"
                    android:text="科一技巧"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_jiakao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/teb_menu_jiakao_text"
                    style="@style/normal_text"
                    android:textColor="@color/black"
                    android:drawableTop="@mipmap/toutiao__qctt_home_ic_lzyy"
                    android:text="图标速记"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_maiche"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tab_menu_maiche_text"
                    style="@style/normal_text"
                    android:textColor="@color/black"
                    android:drawableTop="@mipmap/toutiao__qctt_home_ic_more"
                    android:text="有奖试驾"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_faxian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_faxian_text"
                    style="@style/normal_text"
                    android:textColor="@color/black"
                    android:drawableTop="@mipmap/toutiao__qctt_home_ic_ppgs"
                    android:text="学员福利"
                    />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>



</LinearLayout>
