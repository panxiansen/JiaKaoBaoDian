<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/activity_main_content"

    >

    <FrameLayout
        android:id="@+id/fragment_contentview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/tab_menu_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/whitesmoke"
        android:layout_above="@+id/tab_menu"
        />

    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:id="@+id/tab_menu_baoming"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/teb_menu_baoming_text"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_baoming"
                    android:text="报名"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_jiakao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/teb_menu_jiakao_text"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_jiakao"
                    android:text="驾考"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_maiche"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <TextView
                    android:id="@+id/tab_menu_maiche_text"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_maiche"
                    android:text="买车"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_faxian"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_faxian_text"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_faxian"
                    android:text="发现"
                    />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_menu_baibaoxiang"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tab_menu_baibaoxiang_text"
                    style="@style/tab_menu_text"
                    android:drawableTop="@drawable/tab_menu_baibaoxiang"
                    android:text="百宝箱"
                    />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
